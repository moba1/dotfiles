import platform
from pathlib import Path

new_path = [
    "~/.local/bin",
    "~/.cargo/bin",
]
if platform.system() == "Darwin":
    brew_prefix = "~/.homebrew"
    new_path += [
        Path(brew_prefix) / "bin",
        Path(brew_prefix) / "sbin",
    ]
$PATH = new_path + $PATH

$XONSH_COLOR_STYLE = "native"

if platform.system() == "Darwin":
    brew_prefix = Path("~/.homebrew")
    $BASH_COMPLETIONS = (
        brew_prefix / "etc/bash_completion",
    )
